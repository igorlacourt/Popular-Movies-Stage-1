<?xml version="1.0" encoding="utf-8"?>
<layout >
    <RelativeLayout
        xmlns:tool="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/listItemPaddingLeft"
        android:paddingLeft="@dimen/listItemPaddingLeft" >

        <LinearLayout
            android:id="@+id/trailer_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:weightSum="100">

            <ImageView
                android:id="@+id/trailer_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:padding="15dp" />

            <TextView
                android:id="@+id/trailer_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:padding="@dimen/textPadding"
                android:textSize="@dimen/defaultText"
                android:textColor="@color/defaultFontColor"
                tool:text="TRAILER"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/trailer_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
    </RelativeLayout>

</layout>
